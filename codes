EC2 Using Terraform
# Configure the AWS Provider
provider "aws" {
  access_key = ""
  secret_key = ""
  region = "us-east-1"
}

# Launch EC2 Instances
resource "aws_instance" "terraformUser" {
  ami           = ""  # Replace with a valid AMI for your region
  instance_type = "t3.micro"
  count         = 3

  tags = {
    Name = "praj"
  }
}


